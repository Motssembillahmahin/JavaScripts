<body>
  <div class="whole-body">
    <h1>Bat Ball Stamp</h1>
<div class="button-container">
  <button class="button" onclick="
   GenerateComputerChoice();
    let ResultMsg ;
    if (ComputerChoice === 'Ball') {
      ResultMsg = 'User Won'
    } else if (ComputerChoice === 'Bat'){
      ResultMsg = ` It's a tie `
    } else {
      ResultMsg = 'Computer Won'
    }
  
  alert(`You have chosen to bat, Compute choice is ${ComputerChoice} after all ${ResultMsg} `)
    
  ">Bat</button>
  <button class="button" onclick="
      GenerateComputerChoice();
      let ResultMsgBall;
      if (ComputerChoice === 'Bat') {
        ResultMsgBall = 'User Won'
      } else if (ComputerChoice === 'Ball'){
        ResultMsgBall = ` It's a tie `
      } else {
        ResultMsgBall = 'Computer Won'
      }
    
    alert(`You have chosen to ball, Compute choice is ${ComputerChoice} after all ${ResultMsgBall} `)
    
  
  ">Ball</button>
    <button class="button" onclick="
    GenerateComputerChoice();
      let ResultMsgStamp;
      if (ComputerChoice === 'Bat') {
        ResultMsgStamp = 'User Won'
      } else if (ComputerChoice === 'Stamp'){
        ResultMsgStamp = ` It's a tie `
      } else {
        ResultMsgStamp = 'Computer Won'
      }
    
    alert(`You have chosen to Stamp, Computer choice is ${ComputerChoice} after all ${ResultMsgStamp} `)
  ">Stamp</button>
</div>
  </div>
  <script>
    
   let ComputerChoice;
   function GenerateComputerChoice(){
    let RandomNumber = Math.random() * 3
   if (RandomNumber > 0 && RandomNumber <= 1) {
    ComputerChoice = 'Bat';
    } else if (RandomNumber > 1 && RandomNumber <= 2){
      ComputerChoice = 'Ball'
    } else{
      ComputerChoice = 'Stamp'
    }
   }
   

  </script>
</body>
